<Page x:Class="PassSafe.AllPasses"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PassSafe"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AllPasses">

    <Grid Background="Transparent">


        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Row="0" Grid.Column="0" Width="50" Height="80" Orientation="Vertical" Margin="0 5 0 0">
            <Image Source="/Images/telegram.png" Width="40" Height="40"/>
            <TextBlock Text="Telegram" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Width="50" Height="80" Orientation="Vertical" Margin="0 5 0 0">
            <Image Source="/Images/email.png" Width="40" Height="40"/>
            <TextBlock Text="Mail" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="2" Width="50" Height="80" Orientation="Vertical" Margin="0 5 0 0">
            <Image Source="/Images/Facebook.png" Width="40" Height="40"/>
            <TextBlock Text="Facebook" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="3" Width="50" Height="80" Orientation="Vertical" Margin="0 5 0 0">
            <Image Source="/Images/github.png" Width="40" Height="40"/>
            <TextBlock Text="Git" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="4" Width="50" Height="80" Orientation="Vertical" Margin="0 5 0 0">
            <Image Source="/Images/gmail.png" Width="40" Height="40"/>
            <TextBlock Text="Gmail" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="5" Width="50" Height="80" Orientation="Vertical" Margin="0 5 0 0">
            <Image Source="/Images/google.png" Width="40" Height="40"/>
            <TextBlock Text="Google" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="6" Width="50" Height="80" Orientation="Vertical" Margin="0 5 0 0">
            <Image Source="/Images/instagram.png" Width="40" Height="40"/>
            <TextBlock Text="Instagram" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="7" Width="50" Height="80" Orientation="Vertical" Margin="0 5 0 0">
            <Image Source="/Images/logo.png" Width="40" Height="40"/>
            <TextBlock Text="Figma" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="8" Width="50" Height="80" Orientation="Vertical" Margin="0 5 0 0">
            <Image Source="/Images/twitch.png" Width="40" Height="40"/>
            <TextBlock Text="Twitch" HorizontalAlignment="Center"/>
        </StackPanel>


        <Button Grid.Row="1" Grid.Column="0" Width="50" Height="80" Margin="0 5 0 0" Background="Transparent">
            <StackPanel Orientation="Vertical">
                <Image Source="/Images/vk.png" Width="40" Height="40"/>
                <TextBlock Text="VK" HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>

        <Button Grid.Row="1" Grid.Column="1" Width="50" Height="80" Margin="0 5 0 0" Background="Transparent">
            <StackPanel Orientation="Vertical">
                <Image Source="/Images/unlock.png" Width="40" Height="40"/>
                <TextBlock Text="Aliexpr" HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>

        <Button Grid.Row="1" Grid.Column="2" Width="50" Height="80" Margin="0 5 0 0" Background="Transparent">
            <StackPanel Orientation="Vertical">
                <Image Source="/Images/unlock.png" Width="40" Height="40" HorizontalAlignment="Center" />
                <TextBlock Text="Site" HorizontalAlignment="Center" />
            </StackPanel>
        </Button>

        <Button Grid.Row="1" Grid.Column="3" Width="50" Height="80"  Margin="0 5 0 0" Background="Transparent">
            <StackPanel Orientation="Vertical" >
                <Image Source="/Images/unlock.png" Width="40" Height="40" HorizontalAlignment="Center" />
                <TextBlock Text="Sushi" HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>
        <StackPanel Grid.Row="1" Grid.Column="4" Width="50" Height="80" Orientation="Vertical" Margin="0 5 0 0">
            <Image Source="/Images/unlock.png" Width="40" Height="40"/>
            <TextBlock Text="EduMirea" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="5" Width="50" Height="80" Orientation="Vertical" Margin="0 5 0 0">
            <Image Source="/Images/unlock.png" Width="40" Height="40"/>
            <TextBlock Text="Server" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="6" Width="50" Height="80" Orientation="Vertical" Margin="0 5 0 0">
            <Image Source="/Images/unlock.png" Width="40" Height="40"/>
            <TextBlock Text="Post" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="7" Width="50" Height="80" Orientation="Vertical" Margin="0 5 0 0">
            <Image Source="/Images/unlock.png" Width="40" Height="40"/>
            <TextBlock Text="Steam" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="8" Width="50" Height="80" Orientation="Vertical" Margin="0 5 0 0">
            <Image Source="/Images/unlock.png" Width="40" Height="40"/>
            <TextBlock Text="Poker" HorizontalAlignment="Center"/>
        </StackPanel>


    </Grid>
</Page>
